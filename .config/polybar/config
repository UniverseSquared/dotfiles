[bar/mybar]
modules-left   = bspwm mpd
modules-center = date
modules-right  = temperature cpu memory filesystem

module-margin = 1

font-0 = kiwi:size=8
font-1 = siji:size=8
font-2 = Unifont:size=8

width  = 100%
height = 20
monitor = ${env:MONITOR:}

line-size = 2

background = ${colors.background}

wm-restack = bspwm

[colors]
background = #222
black      = #000000
alert      = #bf281d
selected   = #38387d

red    = #ff0000
orange = #e38a24
yellow = #edd311
green  = #4ebf19
blue   = #115eed
purple = #af11ed

[module/bspwm]
type = internal/bspwm
enable-click = true
enable-scroll = true

label-focused = 
label-focused-padding = 1
label-focused-alignment = center

label-occupied = 
label-occupied-padding = 1
label-occupied-alignment = center

label-empty = 
label-empty-padding = 1
label-empty-alignment = center

label-urgent = 
label-urgent-padding = 1
label-urgent-alignment = center

[module/mpd]
type = internal/mpd

format-online = <label-song> (<label-time>)
format-online-underline = ${colors.red}

format-playing-prefix = 
format-paused-prefix  = 
format-stopped-prefix = 

label-song          = %artist% - %title%
label-song-maxlen   = 150
label-song-ellipsis = true

label-offline =  mpd is offline

[module/date]
type = internal/date
date = %a %Y-%m-%d
time = %I:%M:%S %p

format = <label>
format-underline = ${colors.orange}

label =  %date% %time%

[module/temperature]
type = internal/temperature
thermal-zone = 2

format = <label>
format-underline = ${colors.yellow}

label =  %temperature-c%

[module/cpu]
type = internal/cpu

format = <label>
format-underline = ${colors.green}

label =  %percentage%%

[module/memory]
type = internal/memory

format = <label>
format-underline = ${colors.blue}

label =  %gb_used%

[module/filesystem]
type = internal/fs
interval = 10

fixed-values = true

format-mounted = <label-mounted>
format-mounted-underline = ${colors.purple}

mount-0 = /home

label-mounted =  %free% free
